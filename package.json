{
    "name": "tetris",
    "description": "A tetris game, where you can specify the number of columns/lines of the grid.",
    "version": "2.3.0",
    "packageManager": "pnpm@10.2.1",
    "type": "module",
    "dependencies": {
        "@drk4/utilities": "^6.1.3",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "i18next": "^23.4.4",
        "i18next-browser-languagedetector": "^8.0.0",
        "i18next-http-backend": "^2.2.1",
        "jotai": "^2.4.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^14",
        "react-router-dom": "^6.14.1"
    },
    "devDependencies": {
        "@types/createjs": "~0.0.29",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitest/coverage-v8": "^1.6.0",
        "@vitest/ui": "^1.6.0",
        "circular-dependency-plugin": "^5.2.2",
        "typescript-eslint": "^8.23.0",
        "copy-webpack-plugin": "^12.0.0",
        "eslint": "^9.20.0",
        "eslint-plugin-react": "^7.37.4",
        "@eslint/js": "^9.20.0",
        "globals": "^15.14.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "html-webpack-plugin": "^5.5.3",
        "jsdom": "^24.1.0",
        "prettier": "^3",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "vitest": "^1.6.0",
        "webpack": "^5.88.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "start": "webpack serve --mode=development",
        "build": "webpack --mode=production",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "lint": "eslint source",
        "test": "vitest run --coverage",
        "test:watch": "vitest",
        "test:ui": "vitest --ui"
    }
}
