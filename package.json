{
    "name": "tetris",
    "description": "A tetris game, where you can specify the number of columns/lines of the grid.",
    "version": "2.2.0",
    "dependencies": {
        "@drk4/utilities": "^6.1.2",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "easeljs": "~1.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.14.1"
    },
    "devDependencies": {
        "@types/createjs": "~0.0.29",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.45.0",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "html-webpack-plugin": "^5.5.3",
        "prettier": "^3",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "webpack": "^5.88.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "start": "webpack serve --mode=development",
        "build": "webpack --mode=production",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "lint": "eslint --ext .js,.ts,.tsx source"
    }
}
