{
    "name": "tetris",
    "description": "A tetris game, where you can specify the number of columns/lines of the grid.",
    "version": "2.0.0",
    "dependencies": {
        "easeljs": "~1.0.2"
    },
    "devDependencies": {
        "@types/createjs": "~0.0.29",
        "glob": "^7.1.4",
        "grunt": "~1.0.4",
        "grunt-contrib-clean": "~2.0.0",
        "grunt-contrib-copy": "~1.0.0",
        "grunt-contrib-cssmin": "~3.0.0",
        "light-server": "^2.6.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "terser": "^4.3.4",
        "typescript": "^3.6.3"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:ts": "tsc -w",
        "dev:update_libraries": "grunt update_libraries",
        "dev:server": "light-server --serve . --port 8000 --quiet",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "build": "grunt"
    }
}
