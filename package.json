{
    "name": "tetris",
    "description": "A tetris game, where you can specify the number of columns/lines of the grid.",
    "version": "2.0.0",
    "devDependencies": {
        "@types/createjs": "0.0.29",
        "grunt": "~1.0.4",
        "grunt-contrib-clean": "~2.0.0",
        "grunt-contrib-copy": "~1.0.0",
        "grunt-contrib-cssmin": "~3.0.0",
        "http-server": "^0.11.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.17.0",
        "typescript": "^3.4.5"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:ts": "tsc -w",
        "dev:server": "http-server -p 8000 --silent",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "build": "grunt"
    }
}
